    "version": "0.2.0",
    "configurations": [
        {
            "name": "(lldb) Attach",
            "type": "cppdbg",
            "request": "attach",
            "program": "${workspaceFolder}/tftp-server",
            "MIMode": "lldb"
        },
        {
            "name": "(lldb) Client",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/tftp-client",
            "args": ["-h", "localhost", "-p", "69", "-t", "zad1.pdf", "-b" , "256"],
            "stopAtEntry": false,
            "cwd": ".",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb"
        },
        {
            "name": "(lldb) Server",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/tftp-server",
            "args": ["-p", "69", "${workspaceFolder}testdir"],
            "stopAtEntry": false,
            "cwd": ".",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb"
        }

    ]
}